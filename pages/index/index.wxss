/* pages/index/index.wxss */

.container {
  width: 100%;
  height: 100vh;
  overflow: hidden;
  position: relative;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

/* 首页视图样式 */
.home-view {
  width: 100%;
  height: 100vh;
  position: relative;
}

.bg-image {
  width: 100%;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  background-size: cover;
  background-position: center;
  transition: opacity 0.7s;
}

.loading-indicator {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 10;
}

.spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.gradient-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.3), transparent 30%, rgba(0, 0, 0, 0.7));
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 40rpx;
  color: white;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-top: 80rpx;
}

.date-section {
  display: flex;
  flex-direction: column;
}

.date {
  font-size: 64rpx;
  font-weight: 300;
  letter-spacing: 4rpx;
}

.month-year {
  font-size: 24rpx;
  letter-spacing: 4rpx;
  opacity: 0.8;
  text-transform: uppercase;
}

.location-tag {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  padding: 20rpx 30rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.content-section {
  margin-bottom: 160rpx;
}

.quote-section {
  margin-bottom: 80rpx;
}

.quote-line {
  width: 40rpx;
  height: 6rpx;
  background: #2dd4bf;
  box-shadow: 0 0 20rpx rgba(45, 212, 191, 0.5);
  margin-bottom: 40rpx;
}

.quote-text {
  font-size: 48rpx;
  font-style: italic;
  line-height: 1.4;
  transition: opacity 0.5s;
}

.action-buttons {
  display: flex;
  gap: 40rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  padding: 30rpx 20rpx;
  border-radius: 30rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s;
}

.action-btn:active {
  transform: scale(0.95);
}

.action-btn[disabled] {
  opacity: 0.5;
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 24rpx;
  font-weight: 500;
}

.action-btn.primary {
  background: rgba(45, 212, 191, 0.9);
  box-shadow: 0 10rpx 30rpx rgba(45, 212, 191, 0.2);
}

/* 房间视图样式 */
