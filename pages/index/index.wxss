}

.scroll-hint {
  position: absolute;
  bottom: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  color: rgba(255, 255, 255, 0.5);
  font-size: 48rpx;
  animation: bounce 2s infinite;
  pointer-events: none;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translate(-50%, 0); }
  40% { transform: translate(-50%, -20rpx); }
  60% { transform: translate(-50%, -10rpx); }
}

